{
  "name": "payment-bunjs",
  "version": "1.0.0",
  "description": "API de pagamentos multi-tenant com Clean Architecture, DDD e TDD",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --compile --outfile payment-api",
    "start": "./payment-api",
    "test": "bun test",
    "test:unit": "bun test ./tests/unit",
    "test:integration": "bun test ./tests/integration",
    "test:e2e": "bun test ./tests/e2e",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src tests",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/infrastructure/database/seed.ts",
    "db:seed:check": "bun -e \"import { checkSeedData } from './src/infrastructure/database/seed.ts'; checkSeedData()\"",
    "db:reset": "bun -e \"import { runSeed } from './src/infrastructure/database/seed.ts'; runSeed(true)\"",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "keywords": [
    "payment",
    "api",
    "multi-tenant",
    "clean-architecture",
    "ddd",
    "tdd",
    "bun",
    "elysia"
  ],
  "author": "Payment API Team",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.32.0",
    "better-auth": "^0.7.0",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "elysia": "^1.4.4",
    "pagarme": "^4.0.0",
    "postgres": "^3.4.7",
    "stripe": "^18.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
